<div class="container mt-4">
  <h2 class="fw-bold text-center mb-4">Welcome, <%= user.name %></h2>

  <h4 class="fw-semibold mt-5">Your Boats</h4>
  <div class="row">
    <% if (boats.length === 0) { %>
      <p class="text-muted">No boats added yet.</p>
    <% } else { %>
      <% boats.forEach(boat => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm">
            <img src="/uploads/<%= boat.photo %>" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Boat">
            <div class="card-body">
              <h5 class="card-title"><%= boat.name %> (<%= boat.type %>)</h5>
              <p class="card-text">Capacity: <%= boat.capacity %></p>
              <p class="card-text">Status: <span class="badge bg-<%= boat.status === 'approved' ? 'success' : (boat.status === 'rejected' ? 'danger' : 'warning') %>"><%= boat.status %></span></p>
              <p class="card-text">Base Price: â‚¹<%= boat.base_price || 'Not Set' %></p>
             
            </div>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>

  <h4 class="fw-semibold mt-5">Your Bookings</h4>
  <table class="table table-bordered mt-3">
    <thead class="table-light">
      <tr>
        <th>#</th>
        <th>User</th>
        <th>Boat</th>
        <th>Booking Date</th>
      </tr>
    </thead>
    <tbody>
      <% bookings.forEach((b, i) => { %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= b.user_name %></td>
          <td><%= b.boat_name %></td>
          <td><%= new Date(b.booking_date).toLocaleString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
