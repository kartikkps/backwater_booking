<%- include('./partials/owner_nav') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4">
<div class="d-flex justify-content-between align-items-center mb-4">
  <h3 class="fw-bold">My Boats</h3>
  <a href="/owner/add-boat" class="btn btn-primary">
    <i class="bi bi-plus-circle me-1"></i> Add New Boat
  </a>
</div>

  <div class="row">
    <% boats.forEach(boat => { %>
      <div class="col-md-4 mb-4">
        <div class="card shadow rounded-3">
          <img src="/uploads/<%= boat.photo %>" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Boat Image">
          <div class="card-body">
            <h5 class="card-title"><%= boat.name %> (<%= boat.type %>)</h5>
            <p class="card-text">Capacity: <%= boat.capacity %> people</p>
            <p class="card-text">
              Status: 
              <span class="badge bg-<%= boat.status === 'approved' ? 'success' : (boat.status === 'pending' ? 'warning' : 'danger') %>">
                <%= boat.status %>
              </span>
            </p>
            <p class="card-text">Base Price: â‚¹<%= boat.base_price || 'Not Set' %></p>
          </div>
        </div>
      </div>
    <% }) %>
    
  </div>
</div>
