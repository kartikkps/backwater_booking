<%- include('./partials/owner_nav') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
  <h3 class="fw-bold text-center mb-4">
    <i class="bi bi-chat-dots-fill"></i> Chat with Admin
  </h3>

  <div class="border p-3 mb-3 rounded" style="height: 400px; overflow-y: scroll; background-color: #f8f9fa;">
    <% if (messages.length === 0) { %>
      <p class="text-center text-muted">No messages yet.</p>
    <% } %>
    <% messages.forEach(msg => { %>
      <div class="<%= msg.sender_id === user.id ? 'text-end' : 'text-start' %> mb-2">
        <div class="d-inline-block px-3 py-2 rounded <%= msg.sender_id === user.id ? 'bg-primary text-white' : 'bg-light' %>">
          <strong><%= msg.sender_name %>:</strong> <%= msg.message %>
        </div>
        <br>
        <small class="text-muted"><%= new Date(msg.timestamp).toLocaleString() %></small>
      </div>
    <% }) %>
  </div>

  <form method="POST" action="/owner/chat">
    <input type="hidden" name="receiver_id" value="<%= adminId %>">
    <div class="input-group">
      <input type="text" name="message" class="form-control" placeholder="Type your message..." required>
      <button class="btn btn-success" type="submit"><i class="bi bi-send-fill"></i> Send</button>
    </div>
  </form>
</div>
